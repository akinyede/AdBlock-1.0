{
  "name": "Adblock",
  "manifest_version": 2,
  "description": "Chrome URL Blocking Extension",
  "version": "1.0",
  "icons":{
      "128":"./icons/128.png",
      "48":"./icons/48.png",
      "32":"./icons/32.png",
      "16":"./icons/16.png"
  },

  "browser_action":{
      "default_icon": "./icons/16.png",
      "default_popup": "popup.html"

  },
  "background":{
      "scripts": ["background.js"]
  },
  "permissions": ["tabs", "notifications", "webRequest", "webRequestBlocking", "<all_urls>", "http://*/","https://*/"]

}